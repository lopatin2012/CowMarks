<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentSettings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp">

                    <TextView
                        android:id="@+id/settings_camera_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/settings_camera_text"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/settings_camera_ip_address_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@string/settings_camera_ip_address_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/settings_camera_ip_address_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:autofillHints=""
                        android:ems="14"
                        android:gravity="center"
                        android:hint="@string/settings_ip_address"
                        android:inputType="number"
                        android:digits=".0123456789"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/settings_camera_port_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:text="@string/settings_camera_port_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/settings_camera_port_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:autofillHints=""
                        android:ems="6"
                        android:gravity="center"
                        android:hint="@string/settings_port"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/settings_camera_mode_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:text="@string/settings_camera_mode_text"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/settings_camera_mode_list"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp" />

                    <TextView
                        android:id="@+id/settings_two_scanning_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:text="@string/settings_two_scanning_text"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/settings_two_scanning_flag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:id="@+id/settings_camera_ip_address_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@string/settings_camera_ip_address_text2"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/settings_camera_ip_address_edit2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:autofillHints=""
                        android:ems="14"
                        android:gravity="center"
                        android:hint="@string/settings_ip_address"
                        android:inputType="number"
                        android:digits=".0123456789"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/settings_camera_port_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:text="@string/settings_camera_port_text2"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/settings_camera_port_edit2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:autofillHints=""
                        android:ems="6"
                        android:gravity="center"
                        android:hint="@string/settings_port"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:text=""
                        android:textSize="14sp" />



                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/settings_printer_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/settings_printer_text"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/settings_printer_ip_address_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@string/settings_printer_ip_address_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/settings_printer_ip_address_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:autofillHints=""
                        android:digits=".0123456789"
                        android:ems="14"
                        android:gravity="center"
                        android:hint="@string/settings_ip_address"
                        android:inputType="number"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/settings_printer_port_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:text="@string/settings_camera_port_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/settings_printer_port_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:autofillHints=""
                        android:digits="0123456789"
                        android:ems="6"
                        android:gravity="center"
                        android:hint="@string/settings_port"
                        android:inputType="number"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/settings_printer_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:text="@string/settings_printer_line"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/settings_printer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp">

                    <TextView
                        android:id="@+id/settings_server_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/settings_server_text"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/settings_name_terminal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@string/settings_name_terminal_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/settings_server_life_time_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:text="@string/settings_server_life_time_text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/settings_server_life_time_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/settings_server_life_time_edit"
                        android:inputType="text"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/settings_workshop_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:text="@string/settings_workshop_text"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/settings_workshop"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp" />

                    <TextView
                        android:id="@+id/settings_line_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:text="@string/settings_line_text"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/settings_line"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp" />


                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/settings_button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="32dp"
            android:text="@string/settings_button_save"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/settings_button_update_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="32dp"
            android:text="@string/settings_button_update_data"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/settings_button_save" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>